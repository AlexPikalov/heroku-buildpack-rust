#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
CHANNEL="nightly"

RUSTUP_URL="https://static.rust-lang.org/rustup.sh"

# Sometimes the directory doesn't exist.
mkdir -p "$CACHE_DIR"

if [ ! -f "$CACHE_DIR/rustup" ]; then
    # Get Rustup, install.
    curl $RUSTUP_URL > "$CACHE_DIR/rustup"
    chmod +x "$CACHE_DIR/rustup"
else
    echo "-----> rustup pre-cached"
fi;

if [ ! -f "$CACHE_DIR/rust/bin/rustc" ]; then
    $CACHE_DIR/rustup --channel="$CHANNEL" --disable-sudo --prefix="$CACHE_DIR/rust" --yes
else
    echo "-----> rust pre-cached"
fi;

# Setup ENV
export_env_dir() {
  local env_dir=$1
  if [ -d "$env_dir" ]; then
    local whitelist_regex=${2:-''}
    local blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
    if [ -d "$env_dir" ]; then
      for e in $(ls $env_dir); do
        echo "$e" | grep -E "$whitelist_regex" | grep -qvE "$blacklist_regex" &&
        export "$e=$(cat $env_dir/$e)"
        :
      done
    fi
  fi
}

export_env_dir "$ENV_DIR"
export PATH="$PATH:$CACHE_DIR/rust/bin"
export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$CACHE_DIR/rust/lib"

# Build the Rust app
cd "$BUILD_DIR"
CARGO_HOME="$CACHE_DIR/cargo" cargo build --release
